@{
    ViewBag.Title = "Car Sale";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts
	{
<script src="/js/Custom/CarSale.js"></script>
}
<div class="row" style="border-bottom: 1px solid #eee;padding-bottom: 9px;">
    <div class="col-3">
        <label>Make</label>
        <select id="ddlMake" class="form-control"></select>
    </div>
    <div class="col-4">
        <label>Price Range</label>
        <div class="row">
            <div class="col-6">
                <input id="txtMin" type="text" class="form-control" placeholder="Min" />
            </div>
            <div class="col-6">
                <input id="txtMax" type="text" class="form-control" placeholder="Max" />
            </div>
        </div>
    </div>
    <div class="col-2" style="padding-top: 23px;">
        <button id="btnSearch" class="btn btn-secondary">Search</button>
    </div>
</div>
<div class="row">
    <div class="row" id="divCarImages">
    </div>
</div>

<style>
    .divBorder {
        border: 1px solid #ddd;
    }

    #divCarImages a:link {
        text-decoration: none;
    }

    textarea:focus,
    textarea.form-control:focus,
    select.form-control:focus,
    input.form-control:focus,
    input[type=text]:focus,
    input[type=password]:focus,
    input[type=email]:focus,
    input[type=number]:focus,
    [type=text].form-control:focus,
    [type=password].form-control:focus,
    [type=email].form-control:focus,
    [type=tel].form-control:focus,
    [contenteditable].form-control:focus {
        box-shadow: inset 0 -1px 0 #ddd;
    }

    .form-control {
        border-radius: 0rem;
    }
</style>