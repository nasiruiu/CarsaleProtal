@{
    ViewBag.Title = "Car Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts
	{
<script src="/js/Custom/Cardetails.js"></script>

}

<div class="row">
    <div class="col-7">
        <button id="btnAddNew" class="btn btn-outline-primary">Find out more</button>
        <a href="/CarInformation/Sale" class="btn btn-outline-primary">Back</a>
    </div>
</div>
<div class="row" style="margin-top: 20px;">
    <div class="col-8">
        <div class="row">
            <div class="lightbox-gallery">
                <div class="container">
                    <div class="row photos" id="divCarImages">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-4">
        <div class="row" id="divCarDetails">
        </div>
    </div>
</div>

<div id="modalCustomerInformation" class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Customer Information</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class="row g-3">
                    <div class="col-12">
                        <label for="txtNameww" class="form-label">Name</label>
                        <input type="text" class="form-control txt" id="txtName" />
                        <input type="hidden" id="hdCustomerID" />
                        <input type="hidden" id="hdCarID" />
                    </div>
                    <div class="col-12">
                        <label for="txtEmail" class="form-label">Email</label>
                        <input type="text" class="form-control txt" id="txtEmail" />
                    </div>
                    <div class="col-12">
                        <label for="txtPhoneNumber" class="form-label">Phone Number</label>
                        <input type="text" class="form-control txt" id="txtPhoneNumber" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button id="btnSaveCustomer" type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

<style>
    #divCarDetails span {
        font-weight: 600;
        font-size: 12pt;
    }

    .clsInfo {
        border-bottom: 1px solid #ddd;
        padding: 4px;
    }
</style>